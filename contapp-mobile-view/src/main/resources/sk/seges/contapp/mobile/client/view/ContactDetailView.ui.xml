<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			 xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
			 xmlns:mgwtb="urn:import:com.googlecode.mgwt.ui.client.widget.buttonbar" >
	
	<mgwt:LayoutPanel>
		<mgwt:HeaderPanel>
			<mgwt:left><mgwt:HeaderButton ui:field="backButton" backButton="true" text="Contacts"></mgwt:HeaderButton></mgwt:left>
			<mgwt:center><g:HTML>Detail</g:HTML></mgwt:center>
		</mgwt:HeaderPanel>
		
		<mgwt:ScrollPanel ui:field="scrollPanel">
		    <g:FlowPanel>
				<mgwt:WidgetList round="true">
		        	<g:HTML>First Name:</g:HTML>
			    	<mgwt:MTextBox ui:field="firstName"/>
			    	<g:Label>Last Name:</g:Label>
			    	<mgwt:MTextBox ui:field="lastName"/>
			    	<g:Label>Phone:</g:Label>
			    	<mgwt:MTextBox ui:field="phone"/>
			    	<g:Label>E-mail:</g:Label>
			    	<mgwt:MTextBox ui:field="email"/>
			    </mgwt:WidgetList>
				<g:Image ui:field="image"></g:Image>
			</g:FlowPanel>
		</mgwt:ScrollPanel>
		
		<mgwtb:ButtonBar ui:field="buttonBar">
		</mgwtb:ButtonBar>
		
	</mgwt:LayoutPanel>
</ui:UiBinder> 